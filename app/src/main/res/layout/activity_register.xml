<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".Register">


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/appNameRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#00B53F3F"
            android:gravity="center_horizontal"
            android:shadowColor="#E91E63"
            android:shadowRadius="10"
            android:text="@string/app_name"
            android:textColor="@color/primary_purple"
            android:textColorLink="@color/primary_purple"
            android:textSize="35sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00B53F3F"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"

            android:text="Create New Account"
            android:textColor="@color/primary_purple"
            android:textColorLink="@color/primary_purple"
            android:textSize="20sp"
            android:textStyle="bold"/>



        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="sans-serif-thin"
            android:hint="First Name"

            android:textColor="@color/primary_purple"
            android:textColorHint="@color/black"

            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="sans-serif-thin"
            android:hint="Last Name"
            android:textColor="@color/primary_purple"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
        android:id="@+id/emailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="sans-serif-thin"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_purple"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:accessibilityLiveRegion="none"
        android:fontFamily="sans-serif-thin"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/primary_purple"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/primary_purple"
        android:textColor="@color/white"
        android:text="Register" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        android:visibility="invisible" />

        <Button
            android:id="@+id/goToLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="#00B53F3F"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:text="Already Regisered? Login Here"
            android:textColor="@color/primary_purple"
            android:textColorHint="#FFC107"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
