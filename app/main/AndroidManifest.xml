<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.letschat">

    <application
        android:allowBackup="true"
        android:icon="@drawable/chat_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chat_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetsChat">
        <activity android:name=".ChatActivity" android:screenOrientation="portrait" ></activity>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".Login" android:screenOrientation="portrait" />
        <activity android:name=".Register" android:screenOrientation="portrait" />
    </application>

</manifest>